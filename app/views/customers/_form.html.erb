<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="text-center">
        <h2><%= title %></h2>
      </div>
      <%= form_with url: customer_path, model: @customer do |f|  %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :first_name, class: 'form-label' %>
        <%= f.text_field :first_name, class: 'form-control' %>
        <%= f.label :last_name, class: 'form-label' %>
        <%= f.text_field :last_name, class: 'form-control' %>
        <%= f.label :first_name_kana, class: 'form-label' %>
        <%= f.text_field :first_name_kana, class: 'form-control' %>
        <%= f.label :last_name_kana, class: 'form-label' %>
        <%= f.text_field :last_name_kana, class: 'form-control' %>
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.label :organization, class: 'form-label' %>
        <%= f.text_field :organization, class: 'form-control' %>
        <div class="d-flex justify-content-center">
          <%= f.submit button, class: 'btn btn-primary mt-3 w-10', data: { turbo_confirm: "データを#{button}しますか？" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>