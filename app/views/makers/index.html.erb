<div class="container mt-3 maker-list">
    <div class="d-flex justify-content-center">
        <h1>メーカー一覧</h1>
    </div>
    <%= will_paginate @makers %>
    <div class="table-responsive">
        <div class="d-flex justify-content-end me-4">
            <%= link_to '新規作成', new_maker_path, class: 'btn btn-success' %>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="w-25">ID</th>
                    <th class="w-25">メーカー名</th>
                    <th class="w-50"></th>
                </tr>
            </thead>
            <tbody>
                <% @makers.each do |maker| %>
                    <tr>
                        <td class="w-25"><%= maker.id %></td>
                        <td class="w-50"><%= maker.name %></td>
                        <td clss="w-25">
                            <div class="d-flex justify-content-end ">
                                <%= button_to '編集', edit_maker_path(maker), method: :get, class: 'btn btn-success' %>
                                <%= button_to '削除', maker, method: :delete,
                                    data: { "turbo-method": :delete, turbo_confirm: "削除しますか？" } ,
                                    class: 'btn btn-danger mx-3' %>
                            </div>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <%= will_paginate @makers %>
    </div>
</div>