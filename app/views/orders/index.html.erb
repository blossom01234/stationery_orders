<div class="container mt-3">
    <div class="d-flex justify-content-center mb-3">
        <h1>受注一覧</h1>
    </div>
    <div class="table-responsive">
        <%= will_paginate @orders, class: "pagination" %>
        <table class="table table-hover">
            <thead>
                <tr class="">
                    <th>注文ID</th>
                    <th>ステータス</th>
                    <th>合計金額</th>
                    <th>更新日</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td><%= order.id %></td>
                    <td>data2</td>
                    <td>data3</td>
                    <td>data4</td>
                    <td class="d-flex justify-content-end">
                        <%= link_to "編集", edit_order_path(order), class: 'btn btn-primary' %>
                        <%= link_to "削除", order, method: :delete,
                        data: { "turbo-method": :delete, turbo_confirm: "削除しますか？" },
                        class: 'btn btn-danger mx-3' %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <%= will_paginate @orders, class: "pagination" %>
</div>