<div class="container">
    <h1>Products</h1>
    <%= will_paginate @products %>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>メーカー</th>
                    <th>名前</th>
                    <th>JANコード</th>
                    <th>商品コード</th>
                    <th>単価</th>
                    <th>単位</th>
                    <th>備考</th>
                    <th>作成日</th>
                    <th>更新日</th>
                </tr>
            </thead>
            <tbody>
                <% @products.each do |product| %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= product.maker.name %></td>
                        <td><%= product.name %></td>
                        <td><%= product.jancode %></td>
                        <td><%= product.product_code %></td>
                        <td><%= product.price %></td>
                        <td><%= unit_ctov(product.unit) %></td>
                        <td><%= product.note %></td>
                        <td><%= product.created_at %></td>
                        <td><%= product.updated_at %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <%= will_paginate @products %>
</div>